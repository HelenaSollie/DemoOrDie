extends layout

block content
    div.container
        div.adminLogin
            h1 Sign in as admin
            p This is the teacherzone! As a teacher, you can start a new Demo Or Die session.
        div.adminForm
            form.admin-login(method='#')
                div.form-input
                    label(for='name') Name
                    input(name='name', type='text', autofocus='')
                div.form-input
                    label(for='password') Password
                    input(name='password', type='password')
                button.login-btn(type='submit') Log in

                a.login-btn(href='/login') Go back